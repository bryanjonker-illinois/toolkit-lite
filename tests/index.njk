---
title: Web Toolkit test pages
layout: layouts/page.njk
stylesheets: ['tests.css', 'index.css']
---

{% for group in groups %}

<h2>{{ group.name }}</h2>

<ul class="test-pages">
  {% for file in group.files %}
  <li>
    <h3><a href="{{ file.url }}">{{ file.title if file.title else file.path }}</a></h3>
    {% if file.tests|length > 0 %}
    <h4>Reference images</h4>
    <ul class="reference-images">
      {% for test in file.tests %}
      <li>
        <a href="{{ "reference-images/" + test.image | url }}">{{ test.viewport.label }}</a>
      </li>
      {% endfor %}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
</ul>

{% endfor %}

{% addStaticImages %}