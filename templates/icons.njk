---
title: Icons
---

{% extends "layouts/docs.njk" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ "/_assets/icons.css" | url }}">
{% endblock %}

{% block scripts %}
    <script src="{{ "/_assets/icons.js" | url }}"></script>
{% endblock %}

{% block main %}

<section class="il-content doc-section">
    <div class="doc-text">
        <h1>Icons</h1>
        <button class="font-style" data-font-style="solid">Solid</button>
        <button class="font-style" data-font-style="line">Line</button>
    </div>

    <ul class="icons" data-style="solid">
        {% for icon in icons %}
            <li class="icon">
                <div class="icon__thumbnail">
                    <i class="icon-sample">{{ icon.entity | safe }}</i>
                    <p class="ligatures">{{ icon.ligatures | join(', ') }}</p>
                    <p class="entity">{{ icon.entity }}</p>
                </div>
                <div class="icon-code icon-code--html">

                    <h3>HTML with ligatures</h3>
                    {% for ligature in icon.ligatures %}
                        <div class="icon-style-solid">
                            <div class="icon-example">
                                <div class="icon-example__preview">
                                    <i class="il-icon">{{ ligature }}</i>
                                </div>
                                <div class="icon-example__code">
                                    <code>{{ "<i class=\"il-icon\">" + ligature + "</i>" }}</code>
                                </div>
                            </div>
                        </div>
                        <div class="icon-style-line">
                            <div class="icon-example">
                                <div class="icon-example__preview">
                                    <i class="il-icon-line">{{ ligature }}</i>
                                </div>
                                <div class="icon-example__code">
                                    <code>{{ "<i class=\"il-icon-line\">" + ligature + "</i>" }}</code>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <h3>HTML without ligatures</h3>
                    <div class="icon-style-solid">
                        <div class="icon-example">
                            <div class="icon-example__preview">
                                <i class="il-icon">{{ icon.entity | safe }}</i>
                            </div>
                            <div class="icon-example__code">
                                <code>{{ "<i class=\"il-icon\">" + icon.entity + "</i>" }}</code>
                            </div>
                        </div>
                    </div>
                    <div class="icon-style-line">
                        <div class="icon-example">
                            <div class="icon-example__preview">
                                <i class="il-icon-line">{{ icon.entity | safe }}</i>
                            </div>
                            <div class="icon-example__code">
                                <code>{{ "<i class=\"il-icon-line\">" + icon.entity + "</i>" }}</code>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="icon-code icon-code--css">

                    <h3>CSS with ligatures</h3>
                    {% for ligature in icon.ligatures %}
                        <style>
                            #il-icons-solid-{{ ligature }}-ligature::after {
                                content: "{{ ligature }}";
                                font: 48px var(--il-icons-solid);
                            }

                            #il-icons-line-{{ ligature }}-ligature::after {
                                content: "{{ ligature }}";
                                font: 48px var(--il-icons-line);
                            }
                        </style>
                        <div class="icon-style-solid">
                            <div class="icon-example">
                                <div class="icon-example__preview">
                                    <span id="il-icons-solid-{{ ligature }}-ligature"></span>
                                </div>
                                <div class="icon-example__code">
                                    <code>content: "{{ ligature }}";<br>font-family: var(--il-icons-solid);</code>
                                </div>
                            </div>
                        </div>
                        <div class="icon-style-line">
                            <div class="icon-example">
                                <div class="icon-example__preview">
                                    <span id="il-icons-line-{{ ligature }}-ligature"></span>
                                </div>
                                <div class="icon-example__code">
                                    <code>content: "{{ ligature }}";<br>font-family: var(--il-icons-line);</code>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <h3>CSS without ligatures</h3>
                    <style>
                        #il-icons-solid-{{ icon.ligatures[0] }}-entity::after {
                            content: "{{ icon.css }}";
                            font: 48px var(--il-icons-solid);
                        }

                        #il-icons-line-{{ icon.ligatures[0] }}-entity::after {
                            content: "{{ icon.css }}";
                            font: 48px var(--il-icons-line);
                        }
                    </style>
                    <div class="icon-style-solid">
                        <div class="icon-example">
                            <div class="icon-example__preview">
                                <span id="il-icons-solid-{{ icon.ligatures[0] }}-entity"></span>
                            </div>
                            <div class="icon-example__code">
                                <code>content: "{{ icon.css }}";<br>font-family: var(--il-icons-solid);</code>
                            </div>
                        </div>
                    </div>
                    <div class="icon-style-line">
                        <div class="icon-example">
                            <div class="icon-example__preview">
                                <span id="il-icons-line-{{ icon.ligatures[0] }}-entity"></span>
                            </div>
                            <div class="icon-example__code">
                                <code>content: "{{ icon.css }}";<br>font-family: var(--il-icons-line);</code>
                            </div>
                        </div>
                    </div>

                </div>
            </li>
        {% endfor %}
    </ul>

</section>
{% endblock %}

{% block footer %}
<section class="il-content doc-next">
    <div>
        <h2>What's next?</h2>
        <ul>
            <li><a href="{{ "/header/" | url }}">Using the standard web header</a></li>
            <li><a href="{{ "/" | url }}">Toolkit homepage</a></li>
        </ul>
    </div>
</section>
{{ super() }}
{% endblock %}
