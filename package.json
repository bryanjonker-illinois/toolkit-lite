{
  "name": "web-toolkit",
  "version": "1.1.0",
  "description": "Brand toolkit for the web",
  "repository": "https://github.com/il-marketing/web-toolkit",
  "author": "Office of Strategic Marketing and Branding <marketing@illinois.edu>",
  "license": "NCSA",
  "scripts": {
    "approve-backstop": "backstop approve --config=tests/backstop/backstop.js",
    "build": "encore prod",
    "build-html": "eleventy",
    "dev": "encore dev",
    "open-backstop": "backstop openReport --config=tests/backstop/backstop.js",
    "start": "encore dev-server",
    "test": "npm run test-jest && npm run test-backstop",
    "test-backstop": "backstop test --config=tests/backstop/backstop.js",
    "test-jest": "jest --config=tests/jest/jest.config.js --json --outputFile=var/tests.functional.results.json",
    "watch-html": "eleventy --watch"
  },
  "dependencies": {
    "@symfony/webpack-encore": "^0.30.2",
    "fast-glob": "^3.2.5",
    "lit-element": "^2.4.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "backstopjs": "^4.5.1",
    "jest": "^25.5.4",
    "jest-puppeteer": "^4.4.0"
  }
}
