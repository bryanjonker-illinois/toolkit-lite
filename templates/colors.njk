---
title: Colors
---

{% extends "layouts/docs.njk" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ "/_assets/colors.css" | url }}">
{% endblock %}

{% block scripts %}
    <script src="{{ "/_assets/colors.js" | url }}"></script>
{% endblock %}

{% block main %}
<div class="il-content doc-section">
    <div class="doc-text">

        <h1>Colors</h1>

        <p>All the official hex values are available as CSS variables.</p>

        <pre><code>
            color: var(--il-orange);
            border: 2px solid var(--il-blue);
        </code></pre>

        <p>Click to explore accessibility</p>

    </div>
</div>

<section class="doc-section">

    {% for color in colors %}
    <div class="palette" id="{{ color.var }}">
        <ul>
            <li>
                <article class="chip" style="border-color:var(--{{ color.var }})">
                    <code class="hex">{{ color.hex }}</code>
                    <code>--{{ color.var }}</code>
                    <p>{{ color.name }}</p>
                </article>
            </li>
            {% for variant in color.variants %}
            <li>
                <article class="chip" style="border-color:var(--{{ variant.var }})">
                    <code class="hex">{{ variant.hex }}</code>
                    <code>--{{ variant.var }}</code>
                    {% if variant.name %}
                    <p>Altgeld</p>
                    {% endif %}
                </article>
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endfor %}

</section>

