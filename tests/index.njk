---
title: Web Toolkit test pages
layout: layouts/page.njk
stylesheets: ['tests.css', 'index.css']
---

{% macro viewportIcon(viewport) %}
  {% if viewport.label == "desktop" %}
    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px">
      <use href="#laptop-icon"/>
    </svg>
  {% elseif viewport.label == "phone" or viewport.label == "iphone" %}
    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px">
      <use href="#phone-icon"/>
    </svg>
  {% elseif viewport.label == "desktop" %}
    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px">
      <use href="#laptop-icon"/>
    </svg>
  {% elseif viewport.label == "tv" or viewport.label == "hdtv" %}
    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px">
      <use href="#tv-icon"/>
    </svg>
  {% endif %}
{% endmacro %}

<div class="index">
  <div class="index__header">
    Toolkit {{ pkg.version }}
  </div>
  <div class="index__nav">
    <h2>Navigation</h2>
    <ul>
      {% for group in groups %}
      <li>
        <a href="#{{group.slug}}">{{ group.name }}</a>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="index__contents">

    {% for group in groups %}

    <h2 id="{{ group.slug }}">{{ group.name }}</h2>
    
    <ul class="test-pages">
      {% for file in group.files %}
      <li class="test-page">
        <div class="page-info">
          <h3><a href="{{ file.url }}">{{ file.title if file.title else file.path }}</a></h3>
          <p class="path">{{ file.path }}</p>
        </div>
        {% if file.tests|length > 0 %}
        <div class="reference-images">
          <h4>Reference images</h4>
          <ul class="visual-tests">
            {% for test in file.tests %}
            <li>
              <h5>{{ test.caption }}</h5>
              <ul class="test-images">
                {% for image in test.images %}
                <li><a href="{{ "reference-images/" + image.image | url }}">
                  {{ viewportIcon(image.viewport) }}
                  <span>{{ image.viewport.description if image.viewport.description else image.viewport.label }}</span>
                </a></li>
                {% endfor %}
              </ul>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
    
    {% endfor %}  </div>
</div>

